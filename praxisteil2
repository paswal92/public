import java.util.Random;
import java.util.Scanner;

public class TicTacToe {
	static char [][] spielfeld = new char[3][3];

	public static void main(String[] args) {
		Scanner keyScan = new Scanner(System.in);
		System.out.println("Let's Play Tic Tac Toe");
		init();
		printSpielfeld();
		boolean spielerX  = true;
		int counter = 0;
		int position = 0;
		
				
		while (counter < 9 ) { 
			if (!spielerX) {
				System.out.print("SpielerIn O: ");
				Scanner keyScan2 = new Scanner(System.in);
				int position1 =keyScan2.nextInt();
				counter++;
				position1 = position;
				spielerX = true;
			}
			else {
				System.out.print("SpielerIn X: ");
				Scanner keyScan2 = new Scanner(System.in);
				int position1 =keyScan2.nextInt();
				counter++;
				position1 = position;
				spielerX = false;
			}
			System.out.println("Zeile: "+getZeile(position)+", Spalte: "+getSpalte(position));
								  
		}
				
		
		keyScan.close();
	}
	
	static void init() {
		char [][] spielfeld = new char [3][3];
		for (int i=0; i<3; i++) {
			for (int j=0; j<3; j++) {
				spielfeld[i][j] = '.';
			}
		}
	
	}
	
	static void speichere(int position, boolean spielerX) {
		// TODO
	}
	// Die eingegebenen Zahlen (1-9) müssen für den Zugriff auf das Spielfeld in Zeilen (0-2) und Spalten (0-2) übersetzt werden. 
  // Dazu sollen die Methoden getZeile(..) und getSpalte(..) verwendet werden. 
  //Beide Methoden erhalten eine Position (1-9) als Input und sollen die entsprechende Zeilen- respektive Spaltennummer zurückgeben. 
  //Die Zeilen return 0; müssen entfernt werden. Diese waren nur dazu da, dass sich das Programm ohne Fehler ausführen liess.
  
	static int getZeile(int position) {
		for (int i=0; i<9; i++) {
			if (i=1/ 3 /7)){
				return 0;				
			}
			else if (i=2/ 4 /8) {
				return 1;
			}
			else {
				return 2;
			}
		}
		
			
	}
	
	static int getSpalte(int position) {
		// TODO
		return 5;
	}
	
	static char getSymbol(boolean spielerX) {
		if (!spielerX) {
			return 'O';
		}
		return 'X';
	}
	
	static void printSpielfeld() {
		for (int i=0; i<3; i++) {
			for (int j=0; j<3; j++) {
				System.out.print(spielfeld[i][j]+".");
			}
			System.out.println("");
		}
	}
}
